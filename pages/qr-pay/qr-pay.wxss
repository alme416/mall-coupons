/*
 * header ↓↓↓↓↓
 */
.header {
  padding-bottom: 30rpx;
  width: 100%;
  height: auto;
  background: #fff;
  font-size: 28rpx;
}

.media {
  margin-bottom: 36rpx;
  padding-top: 36rpx;
  width: 100%;
  height: auto;
  text-align: center;
}

.media image {
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  border: 1rpx solid #EBECF1;
  border-radius: 50%;
}

.media text {
  margin-top: 10rpx;
  display: block;
  color: #28354C;
}

.ipt_box {
  box-sizing: border-box;
  padding: 0 24rpx;
  width: 100%;
  height: 80rpx;
}

.ipt_box input {
  padding-left: 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: inherit;
  background: #EBECF1;
  border-radius: 4px;
}
/*
 * header ↑↑↑↑
 */

.coupon_list {
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 28rpx;
}

.coupon_num {
  font-size: 28rpx;
  color: #A6A8B6;
}

.coupon {
  margin-top: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  color: #28354C;
}

.coupon image {
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border: 1rpx solid #EBECF1;
  border-radius: 50%;
}

.coupon_name {
  margin-right: 20rpx;
}

.weui-check__label {
  /*margin-top: 10rpx;*/
  float: right;
}

.weui-check__hd_in-checkbox {
  margin-top: 14rpx;
  height: 50rpx;
}

.cell_box {
  display: flex;
  padding: 0 24rpx;
  font-size: 28rpx;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  background: #fff;
  line-height: 100rpx;
  border-bottom: 1px #ebecf1 solid; 
  overflow: hidden;
}

.cell_bd {
  flex: 3;
  height: inherit;
  color: #28354C;
}

.cell_ft {
  height: inherit;  
  color: #E3007E;
  text-align: right;
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.button {
  margin-top: 100rpx;
  margin-bottom: 40rpx;
}



