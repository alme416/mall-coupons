<view class="container">
  <view class="header">
    <view class="media">
      <image class="shop_img" src="http://placehold.it/120x120" mode="aspectFill"></image>
      <text class="shop_name">肯德基麦当劳</text>
    </view>

    <view class="ipt_box">
      <input placeholder-style="color: #c4c5ce" placeholder="请输入消费金额" type="number" />
    </view>
  </view>

  <view class="coupon_list">
    <text class="coupon_num">您有 3 张可用优惠券</text>
    <view class="coupon">
      <image class="shop_img" src="http://placehold.it/120x120" mode="aspectFill"></image>
      <text class="coupon_name">汉拿山99代100元</text>
      <text class="pink">-100</text>
      <label class="weui-cell weui-check__label" wx:key="value">
        <checkbox class="weui-check" value="{{item.value}}" checked="true"/>
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{false}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{true}}"></icon>
        </view>
      </label>
    </view>

    <view class="coupon">
      <image class="shop_img" src="http://placehold.it/120x120" mode="aspectFill"></image>
      <text class="coupon_name">汉拿山99代100元</text>
      <text class="pink">-100</text>
      <label class="weui-cell weui-check__label" wx:key="value">
        <checkbox class="weui-check" value="{{item.value}}" checked="true"/>
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{false}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{true}}"></icon>
        </view>
      </label>
    </view>

    <view class="coupon">
      <image class="shop_img" src="http://placehold.it/120x120" mode="aspectFill"></image>
      <text class="coupon_name">汉拿山99代100元</text>
      <text class="pink">-100</text>
      <label class="weui-cell weui-check__label" wx:key="value">
        <checkbox class="weui-check" value="{{item.value}}" checked="true"/>
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{false}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{true}}"></icon>
        </view>
      </label>
    </view>
  </view>

  <view class="cell_box">
    <view class="cell_bd">优惠券抵用：</view>
    <view class="cell_ft">-300</view>
  </view>

  <view class="cell_box">
    <view class="cell_bd">您还需支付：</view>
    <view class="cell_ft">￥12.00</view>
  </view>

  <button class="button">微信支付</button>
</view>