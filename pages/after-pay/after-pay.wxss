.container {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.cell_box {
  display: flex;
  padding: 0 24rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background: #fff;
  line-height: 80rpx;
  border-bottom: 1px #ebecf1 solid; 
  overflow: hidden;
}

.cell_bd {
  flex: 3;
  height: inherit;
  color: #83889a;
}

.cell_ft {
  height: inherit;  
  color: #28354c;
  text-align: right;
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.tips_box {
  margin-top: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 12px;
  color: #83889A;
  line-height: 40rpx;
  width: 100%;
  height: auto;
}

.title {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #28354C;
}

.tips {
  padding-left: 26rpx;
  margin-bottom: 10rpx;
}

.ol {
  position: absolute;
  left: 20rpx;
}

.button {
  margin-top: 100rpx;
}