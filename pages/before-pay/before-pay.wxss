.container {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.cell_box {
  display: flex;
  padding: 0 24rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background: #fff;
  line-height: 80rpx;
  border-bottom: 1px #ebecf1 solid; 
  overflow: hidden;
}

.cell_bd {
  flex: 3;
  height: inherit;
  color: #83889a;
}

.cell_ft {
  height: inherit;  
  color: #28354c;
  text-align: right;
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.num {
  margin: 0 10rpx;
  padding: 0 30rpx;
  display: block;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: #EBECF1;
}

.computed_btn {
  height: 52rpx;
  width: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 0;
  font-size: 32rpx;
  color: #83889a;
  background: #EBECF1;
}

.cell_phone {
  margin-top: 20rpx;
}

.cell_bd_phone {
  flex: 1;
  height: inherit;
  color: #83889a;
}

.cell_ft_input {
  height: inherit;  
  color: #28354c;
  text-align: right;
  flex: 3;
  display: flex;
  align-items: center;
}

.cell_ft_input input {
  text-align: left;
  width: 100%;
  height: inherit;
}

.cell_ft_input_code {
  height: inherit;  
  color: #28354c;
  text-align: right;
  flex: 2;
  display: flex;
  align-items: center;
}

.cell_ft_input_code input {
  text-align: left;
  width: 100%;
}

.send_code {
  flex: 1;
  border-left: 1px #ebecf1 solid;
  text-align: center;
  height: inherit;
}

.button {
  margin-top: 100rpx;
}